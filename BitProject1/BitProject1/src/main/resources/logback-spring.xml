<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 출력 설정 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm} %highlight(%-5level) %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- 전체 로그 설정 -->
	<root level="INFO">
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>